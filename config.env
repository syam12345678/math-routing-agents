# Math Routing Agent Configuration
# Copy this to .env and add your API keys

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Web Search APIs (Optional - for web search functionality)
TAVILY_API_KEY=
EXA_API_KEY=
SERPER_API_KEY=

# Application Configuration
APP_NAME=Math Routing Agent
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./math_agent.db

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=gpt-3.5-turbo
TEMPERATURE=0.1
MAX_TOKENS=2000

# Vector Database Configuration
VECTOR_COLLECTION_NAME=math_knowledge
VECTOR_DIMENSION=384

# Search Configuration
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=5
